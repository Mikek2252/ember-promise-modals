{{#if this.modals.count}}
  <div
    class="epm-backdrop"
    tabindex="-1"
    role="presentation"
    aria-hidden="true"
    {{action "close" this.modals.top}}
  ></div>
{{/if}}

{{#each this.modals._stack as |modal|}}
  <div class="epm-modal">
    {{component modal._name data=modal._data}}
  </div>
{{/each}}