{{#animated-if
  this.modals.count
  use=this.modals.backdropTransition
  duration=this.modals.backdropDuration
}}
  <div
    class="epm-backdrop"
    tabindex="-1"
    role="presentation"
    aria-hidden="true"
    {{action "close" this.modals.top}}
  ></div>
{{/animated-if}}

{{#animated-each
  this.modals._stack
  use=this.modals.modalsTransition
  duration=this.modals.modalsDuration
  as |modal|
}}
  <div class="epm-modal">
    {{component modal._name data=modal._data}}
  </div>
{{/animated-each}}